#include <iostream>
using namespace std;

int main()
{
	printf_s(
			"***********************************************************\n\
			*Nizhniy Novgorod Technical University*\n\
			* Study work number 1. Task number 6. *\n\
			*Performed student 21IVT-2 Komarova Ekaterina*\n\
			***********************************************************\n"
			);
 
	float s, p, v;

	cout << "Vvedite summu vklada: ";
	cin >> s;
	cout << "Vvedite procentnyu stavku: ";
	cin >> p;
	cout << "Vvedite vremya razmesheniya(v dnyah): ";
	cin >> v;

	cout << "Summa vklada cherez " << v << " dney budet ravna: " << s + s * p * (v/365) / 100;
 
  return 0;

}
