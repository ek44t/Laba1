/* Теория: эта программа переводит введенное число в системы счисления		*/
/* Описание: запросить число и преобразовать его в 8ричную и 16 ричную сс	*/
/* Дата: 2021 / 09 / 25														*/
/* Автор: Комарова Е. Л.													*/
/* Версия: 1																*/
/****************************************************************************/

#include <iostream>
using namespace std;

int main() 
{
	printf_s(
			"***********************************************************\n\
			*Nizhniy Novgorod Technical University*\n\
			* Study work number 1. Task number 2. *\n\
			*Performed student 21IVT-2 Komarova Ekaterina*\n\
			***********************************************************\n"
					);

	int n;

	cout << "Vvedite desyatichnoe chislo: ";
	cin >> n;
	cout << "10: " << dec << n << endl;//вывод в десятичной системе счисления
	cout << "16: " << hex << n << endl;//вывод в шестнадцатеричной системе счисления
	cout << "8: " << oct << n << endl;//вывод в восьмеричной системе счисления

	return 0;
}
