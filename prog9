#include <iostream>
using namespace std;
#define _USE_MATH_DEFINES
#include <math.h> 

int main()
{
 	printf_s(
			"***********************************************************\n\
			*Nizhniy Novgorod Technical University*\n\
			* Study work number 1. Task number 9. *\n\
			*Performed student 21IVT-2 Komarova Ekaterina*\n\
			***********************************************************\n"
			);
 
	float a = 2.53, x = 0.7, y, z;
 
	y = log(2 * pow(a, 3) + pow(a, 3 / 2));
	z = 3.7 * pow(tan(2 * x), 2);

	cout << "y = " << y << endl;
	cout << "z = " << z << endl;
	 
	return 0;

}
