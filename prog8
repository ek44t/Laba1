#include <iostream>
using namespace std;
#define _USE_MATH_DEFINES
#include <math.h> 

int main()
{
 	printf_s(
			"***********************************************************\n\
			*Nizhniy Novgorod Technical University*\n\
			* Study work number 1. Task number 8. *\n\
			*Performed student 21IVT-2 Komarova Ekaterina*\n\
			***********************************************************\n"
			);
 
  float R, r;
 
  cout << "Vvedite vneshniy radius kol'ca: ";
  cin >> R ;
  cout << "Vvedite vnutrenniy radius kol'ca: ";
  cin >> r;
  cout <<"Ploshad' kruga ravna: " <<  M_PI * (R*R - r*r);
 
  return 0;

}
